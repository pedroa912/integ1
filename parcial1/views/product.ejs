<%- include('../views/partials/head') %>
<body>
	<%- include('../views/partials/headerLogueado.ejs')%>
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= producto.lista[0].modelo %></h2> 
			<p class="product-detail-description">
				<a href="/productos/add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= producto.lista[0].foto %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= producto.lista[0].descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for(let i=0; i<1; i++){%>
                            <article>
                                <img src="/images/users/default-image.png" alt="">
                                <div class="data">
                                    <p class="user">
                                    <strong> <a href="profile.html">Nombre usuario:</strong> <%= producto.lista[0].comentarios[i].usuario %></a>
                                    <%= producto.lista[0].comentarios[i].texto %></p>
                                </div>
                            </article>
                        <% } %>

					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->
	<%- include('../views/partials/footer') %>

</body>	
</html>