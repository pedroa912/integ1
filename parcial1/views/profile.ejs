<%- include('../views/partials/head') %>
<body>
	<% if(locals.user != null) { %>
        <%- include('../views/partials/headerLogueado.ejs') %>
    <% } else { %>
        <%- include('../views/partials/header.ejs') %>
    <% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= usuario.fotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.nombre %>
						<% if(userCheck == true) { %>
							<a href="/users/edit">
								<i class="fas fa-cog"></i>
							</a>
						</h1>
						<% } else { %>
							<a class="btn mt-3 ml-4" href="">SEGUIR</a> %>
						<% } %>
				</div>
				<div>
					<ul class="">
						<li><%= usuario.email %></li>
						<li>Productos: <%= usuario.producto.length %></li>
						<!--<li>200 seguidores</li> -->
						<li>Comentarios: <%= usuario.comentario.length %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i=0; i < usuario.producto.length; i++) {%>
                <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/productos/detalle/<%= usuario.producto[i].id %>">
                        <figure class="product-box_image">
                            <img src="<%= usuario.producto[i].foto %>" alt="">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= usuario.producto[i].modelo %></h2>
                            <p> <%= usuario.producto[i].descripcion %></p>
                            <p>Comentarios: <%= usuario.producto[i].comentario.length %></p>
                        </article>
                    </a>
                </section>
            </div>          
            <% } %>
		</div>
	</div>
	
	<%- include('../views/partials/footer') %>
</body>	
</html>