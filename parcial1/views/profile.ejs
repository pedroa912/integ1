<%- include('../views/partials/head') %>
<body>
	<%- include('../views/partials/headerLogueado') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= usuario[0].fotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario[0].nombre %> 
						<a href="/users/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= usuario[0].email %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i=0; i<10; i++) {%>
                <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/productos/<%= producto.lista[i].id %>">
                        <figure class="product-box_image">
                            <img src="<%= producto.lista[i].foto %>" alt="">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= producto.lista[i].modelo %></h2>
                            <p> Pantalla Super Retina XDR, Pantalla OLED de 6.1 pulgadas (diagonal) sin marco y Resoluci√≥n de 2532 x 1170 pixeles a 460 ppi</p>
                            <p>Comentarios: 50</p>
                        </article>
                    </a>
                </section>
            </div>          
            <% } %>
		</div>
	</div>
	
	<%- include('../views/partials/footer') %>
</body>	
</html>