<%- include('./partials/head') %>


<body>
	<!-- Header -->
	<% if(locals.user != null) { %>
        <%- include('../views/partials/headerLogueado.ejs') %>
    <% } else { %>
        <%- include('../views/partials/header.ejs') %>
    <% } %>
	<!-- /Header -->
	<!-- Banner -->
	<div class="banner">
		<img src="images/banner.jpg" alt="">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- MÃ¡s comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<% for(let i=0; i<10; i++) {%>
                <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/productos/detalle/<%= productoIndex[i].id %>">
                        <figure class="product-box_image">
                            <img src="<%= productoIndex[i].foto %>" alt="">
                        </figure>
                        <article class="product-box_data">
                            <h2> <%= productoIndex[i].nombre %></h2>
                            <p> <%= productoIndex[i].descripcion %></p>
                            <p></p>
                        </article>
                    </a>
                </section>
            	</div>          
            <% } %>
	
		</div>
	</div>
	<!-- /MÃ¡s comentados -->


	<!-- footer -->
	<%- include('../views/partials/footer') %>
	<!-- /footer -->
</body>	
</html>
