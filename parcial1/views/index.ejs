<%- include('../views/partials/head') %>
<body>
	<!-- Header -->
	<%- include('../views/partials/header') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/apple-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<% for(let cel of celulares) {%>
                <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/productos/detalle/<%= cel.id %>">
                        <figure class="product-box_image">
                            <img src="<%= './images/products/' %>" alt="">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= cel.modelo %></h2>
                            <p> <%= cel.descripcion %></p>
                          
                            <p>Comentarios: <%= cel.comentario_producto %></p>
                        </article>
						<ul>
							
						</ul>
                    </a>
                </section>
            </div>          
            <% } %>
	

	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('../views/partials/footer') %>
	<!-- /footer -->
</body>	
</html>