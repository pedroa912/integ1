<%- include('../views/partials/head') %>

<body>
	<%- include('../views/partials/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
				<% if (locals.errors){ %>
					<h3 style="color: red"><%= errors.message  %></h3>
				<% } %>
			</div>
			<!-- Show the "ultimos" products -->
			<form action="/users/register" method="post">
				<input class="form-input" type="email" name="mail" placeholder="Email">
				<input class="form-input" type="text" name="nombre" placeholder="Nombre">
				<input class="form-input" type="password" name="contrasenia" placeholder="Contrasenia" minlength="3">
				<label class="form-label"> <input class="form-input" type="date" name="Fecha_de_nacimiento"> Fecha de Nacimiento</label>
				<input class="form-input" type="number" name="Documento" placeholder="Numero_de_documento">
				<label class="form-label"> <input class="form-input" type="text" name="Foto_de_perfil"> Foto de perfil </label>
				<label class="form-label"> <button class="form-label" type="submit">Ingresar</button></label>
			</form>	
	<%- include('../views/partials/footer') %>
	
</body>

</html>