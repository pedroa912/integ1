<%- include('./partials/head') %>


<body>
	<!-- Header -->
	<% if(locals.user != null) { %>
        <%- include('../views/partials/headerLogueado.ejs') %>
    <% } else { %>
        <%- include('../views/partials/header.ejs') %>
    <% } %> 
	<!-- /Header -->
	<!-- Banner -->
	<div class="banner">
		<img src="images/banner.jpg" alt="">
	</div>
    <section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= usuarioOtro.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuarioOtro.nombre %>
				</div>
				<div>
					<ul class="">
						<li><%= usuarioOtro.email %></li>
						<li>Productos: <%= usuarioOtro.producto.length %></li>
						<!--<li>200 seguidores</li> -->
						<li>Comentarios: <%= usuarioOtro.comentario.length %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i=0; i < usuarioOtro.producto.length; i++) {%>
                <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/productos/detalle/<%= usuarioOtro.producto[i].id %>">
                        <figure class="product-box_image">
                            <img src="<%= usuarioOtro.producto[i].foto %>" alt="">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= usuarioOtro.producto[i].modelo %></h2>
                            <p> <%= usuarioOtro.producto[i].descripcion %></p>
                            <p>Comentarios: <%= usuarioOtro.producto[i].comentario %></p>
                        </article>
                    </a>
                </section>
            </div>          
            <% } %>
		</div>
	</div>


	<%- include('../views/partials/footer') %>
	<!-- /footer -->
</body>	