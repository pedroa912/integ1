<%- include('../views/partials/head') %>
<body>
	
	<%- include('../views/partials/headerLogueado.ejs') %>
   
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action="/users/edit" method="post">
				<input class="form-input" type="email" name="email" placeholder="Email" value="<%= user.email %>">
				<input class="form-input" type="text" name="Nombre de usuario" placeholder="Nombre de usuario" value="<%= user.usuario %>">
				<input class="form-input" type="password" name="contraseña" placeholder="Contraseña">
				<label class="form-label"> <input class="form-input" type="date" name="Fecha de nacimiento"> Fecha de Nacimiento: <%= user.fechaDeNacimiento %></label>
				<input class="form-input" type="number" name="Documento" placeholder="Número de documento" value="<%= user.numeroDeDocumento %>">
				<label class="form-label"> <input class="form-input" type="image" name="Foto de perfil" placeholder="Foto de perfil" value="<%= user.fotoDePerfil %>"> Foto de perfil </label>
				<label class="form-label"> <input class="form-input" type="button" > Guardar </label>
			</form>


	<!-- footer -->
	<%- include('../views/partials/footer') %>
</body>

</html>